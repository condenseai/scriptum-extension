{
  "name": "Scriptum",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Accelerate your writing with Scriptum",
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action" : {
    "default_title": "Scriptum"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery-3.5.1.js","js/content.js"]
    }
  ],
  "permissions": [
    "webRequest",
    "activeTab",
    "<all_urls>"
  ],
  "commands": {
    "generate" : {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Generate the next sentence."
    }
  }
}